<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:weightSum="600" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1080"
            android:background="@drawable/ui_rev03_09">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="100" >

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:text=">"
                    android:textSize="40dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="200"
                    android:background="#F4F4F4"
                    android:gravity="center"
                    android:text="Scan Setting"
                    android:textColor="#000000"
                    android:textSize="40dp"
                    android:visibility="gone" />

            </RelativeLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="1920"
                android:layout_weight="980">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="240" />

                <TextView
                    android:id="@+id/tv"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="625"
                    android:gravity="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1015"
                    android:weightSum="980">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="220"
                        android:orientation="vertical"
                        android:paddingLeft="5dp"
                        android:paddingTop="5dp"
                        android:visibility="gone">

                        <ScrollView
                            android:id="@+id/sv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="100"
                            android:background="#FFFFFF"
                            android:visibility="visible" >

                            <TextView
                                android:id="@+id/tv_log"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="500"
                                android:background="#FFFFFF"
                                android:gravity="bottom"
                                android:scrollbars="vertical"
                                android:text="log"
                                android:textColor="#000000" />

                        </ScrollView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="90"
                        android:orientation="horizontal"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_bt_mac"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="500"
                            android:gravity="bottom|left"
                            android:textColor="#000000"
                            android:textSize="22dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:orientation="horizontal"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textSize="12dp" />

                        <TextView
                            android:id="@+id/tv_wifi_mac"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="500"
                            android:gravity="left|center"
                            android:textColor="#000000"
                            android:textSize="22dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:orientation="horizontal"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/et_upload_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="450"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="center|left"
                            android:hint="Upload Frequency(milliseconds/time)"
                            android:inputType="number" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:orientation="horizontal"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView002"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/et_scan_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="260"
                            android:background="@null"
                            android:ems="10"
                            android:hint="Scan Frequency(milliseconds/time)"
                            android:inputType="number"
                            android:maxLength="4" >

                            <requestFocus />
                        </EditText>

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="15" />

                        <EditText
                            android:id="@+id/et_stop_scan_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="260"
                            android:background="@null"
                            android:ems="10"
                            android:hint="Stop Scan Frequency(milliseconds)"
                            android:inputType="number"
                            android:maxLength="4" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <RadioGroup
                            android:id="@+id/rg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="400"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/radio0"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:checked="false"
                                android:text="iScan"
                                android:textColor="#000000"
                                android:scaleX="0.4"
                                android:scaleY="0.4"
                                android:button="@drawable/custom_radio_button_background" />

                            <RadioButton
                                android:id="@+id/radio1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:checked="true"
                                android:text="Customize"
                                android:textColor="#000000"
                                android:scaleX="0.4"
                                android:scaleY="0.4"
                                android:button="@drawable/custom_radio_button_background" />
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:orientation="horizontal"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView02"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/et_url"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="510"
                            android:background="@null"
                            android:ems="10"
                            android:hint="URL"
                            android:lines="1"
                            android:textColor="#000000"
                            android:textSize="12dp" >

                            <requestFocus />
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView25"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <RadioGroup
                            android:id="@+id/rg_avg"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="300"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/radio01"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:checked="true"
                                android:text="None"
                                android:textColor="#000000"
                                android:scaleX="0.4"
                                android:scaleY="0.4"
                                android:button="@drawable/custom_radio_button_background" />

                            <RadioButton
                                android:id="@+id/radio02"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="AVG"
                                android:textColor="#000000"
                                android:scaleX="0.4"
                                android:scaleY="0.4"
                                android:button="@drawable/custom_radio_button_background" />
                        </RadioGroup>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:orientation="horizontal"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/TextView01"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/et_filter_uuid"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="510"
                            android:background="@null"
                            android:ems="10"
                            android:gravity="center_vertical"
                            android:hint="Filter(UUID)"
                            android:lines="1"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <EditText
                            android:id="@+id/et_ssid"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="260"
                            android:background="@null"
                            android:ems="10"
                            android:hint="SSID"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="15" />

                        <EditText
                            android:id="@+id/et_key"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="250"
                            android:ems="10"
                            android:hint="key"
                            android:textColor="#000000"
                            android:background="@null" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/tv_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="500"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <TextClock
                            android:id="@+id/dc"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="20"
                            android:visibility="gone" />
                    </LinearLayout>
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60"
                        android:weightSum="1080" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="310"
                            android:gravity="center"
                            android:textColor="#000000" />

                        <RadioGroup
                            android:id="@+id/rg_mode"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="300"
                            android:orientation="horizontal" >

                            <RadioButton
                                android:id="@+id/radio001"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:button="@drawable/custom_radio_button_background"
                                android:checked="true"
                                android:scaleX="0.4"
                                android:scaleY="0.4"
                                android:text="Wifi"
                                android:textColor="#000000" />

                            <RadioButton
                                android:id="@+id/radio002"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:button="@drawable/custom_radio_button_background"
                                android:scaleX="0.4"
                                android:scaleY="0.4"
                                android:text="Ethernet"
                                android:textColor="#000000" />

                        </RadioGroup>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="90" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="80"
                        android:weightSum="1080" >

                        <TextView
                            android:id="@+id/textView26"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="360" />

                        <Button
                            android:id="@+id/btn_save"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="245"
                            android:textSize="20dp"
                            android:background="@drawable/btnsave_hit" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:id="@+id/textView27"
                            android:layout_weight="10" />

                        <Button
                            android:id="@+id/btn_start_receiver"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="240"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:background="@drawable/btnrestart_hit" />

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</RelativeLayout>